{% extends template ~ "/layout/layout.twig" %}
{% block content %}
<section class="container mt-0" style="padding-top: 8.5rem">
    <h1 class="mb-3 display-5 fw-bold text-center">{{ lang.title_recover }}</h1>
    <div class="row mt-4">
        <div class="col-3"></div>
        <div class="col-6">
            <form id="formRecover" class="needs-validation">
                <!-- Password -->
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="password" class="form-label">{{ lang.password }}</label><br />
                        <small>{{ lang_layout.sublabel_password }}</small>
                        <input type="password" pattern="^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=\S+$).{6,}$" class="form-control" name="password" id="recoverPassword" required>
                        <div class="invalid-feedback">{{ lang.error_required_field }}</div>
                    </div>
                </div>
                <!-- Confirm Password -->
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="confirmPassword" class="form-label">{{ lang.confirm_password }}</label>
                        <input type="password" pattern="^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=\S+$).{6,}$" data-equalTo="recoverPassword" class="form-control" name="confirm_password" id="recoverConfirmPassword" required>
                        <div class="invalid-feedback">{{ lang.error_required_field }}</div>
                    </div>
                </div>
                <input type="hidden" name="code" value="{{ confirm }}" required>
                <div class="error-display alert d-none"></div>
                <div class="text-center">
                    <button type="submit" class="btn btn-dark">{{ lang.save }}</button>
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</section>
{% endblock %}