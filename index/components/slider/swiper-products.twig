<div class="swiper mySwiper3" data-swiper
     data-options='{
        "slidesPerView":1,
        "spaceBetween":30,
        "pagination":{"el":".swiper-pagination","clickable":true},
        "navigation":{"nextEl":".swiper-button-next","prevEl":".swiper-button-prev"},
        "breakpoints":{"640":{"slidesPerView":2,"spaceBetween":20},"768":{"slidesPerView":3,"spaceBetween":40},"1024":{"slidesPerView":4,"spaceBetween":50}}}'>
    <div class="swiper-wrapper">
        {% for product in products %}
            {% set images = json_decode(product.variant_images) %}
            <div class="swiper-slide">
                {% include template ~ "/index/components/slider/base-card-product.twig" %}
            </div>
        {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</div>