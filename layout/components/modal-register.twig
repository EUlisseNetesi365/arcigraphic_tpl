<div id="registerModal" class="modal fade r-border" aria-labelledby="registerModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">				
				<h4 id="registerModalLabel" class="modal-title">{{ lang_layout.register }}</h4>
				<button type="button" class="close no-bg no-border" data-bs-dismiss="modal" aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </button>
			</div>
			<div class="modal-body">
				<form id="register-form" class="needs-validation">
					<div class="form-group">
						<i class="ri-1 ri-user-2-fill"></i>
						<small>{{ lang_layout.sublabel_username }}</small>
						<input name="username" pattern="^[a-zA-Z]+[a-zA-Z0-9_]+$"  type="text" class="form-control" placeholder="{{ lang_layout.username }}" required>
					</div>
					<div class="form-group">
						<i class="ri-1 ri-mail-fill"></i>
						<input name="email" type="email" class="form-control" placeholder="{{ lang_layout.email }}" required>
					</div>
					<div class="form-group">
						<i class="ri-1 ri-lock-password-fill"></i>
						<small>{{ lang_layout.sublabel_password }}</small>
						<input name="password" type="password" pattern="^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=\S+$).{6,}$" class="form-control" placeholder="{{ lang_layout.password }}" required>
					</div>
					<div class="error-display alert d-none">
						<button class="btn btn-primary btn-sm d-none">{{ lang_layout.resend_email }}</button>
					</div>
					<button type="submit" class="h-50 btn btn-dark fw-bolder text-center transition-all opacity-50-hover">{{ lang_layout.register }}</button>
				</form>
			</div>
			<div class="modal-footer bg-gray">
				<span>{{ lang_layout.label_allready_registered }}</span>
				<a href="#" class="text-decoration-none text-body text-secondary-hover transition-all d-flex justify-content-between align-items-center me-auto" onclick='openLoginFromRegister()'>{{lang_layout.login_title}}</a>
			</div>
		</div>
	</div>
</div>
