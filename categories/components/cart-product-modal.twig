<div class="modal fade" :id="'exampleModal-'+index" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" :aria-labelledby="'exampleModalLabel-'+index" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content p-5">
            <div class="modal-header" id="modal-header">
                <button type="button" @click="resetSize" class="btn-close justify-content-end ml-auto pull-right" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
{#            <div class="col-md-1 d-flex">#}
{#            </div>#}
            <div class="row">
            <div class="col-md-6">
            <div class="row g-1">
                <div class="col-md-4 col-sm-hide mt-4 d-none d-sm-block">
                    <div class="col-6">
                                <div v-for="imgpro in img_attr_vue[index]" class="bg-light h-auto mb-3 cursor-pointer" style="border: 1px #000000 !important;">
                                        <img @click="switchImg( imgpro.position, 'carouselItem-'+index)" class="img-fluid mx-auto d-table" :src="'{{ basepath }}'+imgpro.image " alt="">
                                </div>
                    </div>
                </div>
                <div class="col-md-8 col-sm-12 mt-4">
                    <div class="col-10">
                        <div :id="'carousel-'+index" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
                            <div class="carousel-inner">
{#                            {% for imgprobig in img_attr %}#}
{#                                {% if  loop.first%}#}
                                <div  v-for="(imgprobig, indexCarousel) in img_attr_vue[index]" >
                                    <div v-if="indexCarousel == 0" :name="'carouselItem-'+index" class="carousel-item active">
                                        <input type="hidden" :value="imgprobig.position">
                                        <div class="bg-white h-auto">
                                            <img class="img-fluid d-table mx-auto demo-trigger" style="border: 1px #000000 !important"
                                                 :src="'{{ basepath }}'+imgprobig.image"
                                                 :data-zoom="'{{ basepath }}'+imgprobig.image" alt="">
                                        </div>
                                    </div>
                                    <div v-else :name="'carouselItem-'+index" class="carousel-item">
                                        <input type="hidden" :value="imgprobig.position">
                                        <div class="bg-white h-auto">
                                            <img class="img-fluid d-table mx-auto demo-trigger" style="border: 1px #000000 !important"
                                                :src="'{{ basepath }}'+imgprobig.image"
                                                :data-zoom="'{{ basepath }}'+imgprobig.image" alt="">
                                        </div>
                                    </div>
                                </div>
                                </div>
                            <button @click="switchImg(0, 'carouselItem-'+index)" class="carousel-control-prev d-md-none d-sm-block" type="button" :data-bs-target="'#carousel-'+index" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" style="filter: grayscale(1) invert(1);" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button @click="switchImg(1, 'carouselItem-'+index)" class="carousel-control-next d-md-none d-sm-block" type="button" :data-bs-target="'#carousel-'+index" data-bs-slide="next">
                                <span class="carousel-control-next-icon" style="filter: grayscale(1) invert(1);" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
{#                            {% endfor %}#}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <h3>{_ item.product_name _}</h3>
                {% set idIndex = loop.index0 %}
                {% include template ~ "/categories/components/product-options-modal.twig" %}
                </div>
                </div>
            </div>
        </div>
    </div>
</div>

