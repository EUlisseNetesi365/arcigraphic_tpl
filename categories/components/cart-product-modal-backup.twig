{% set carouselIndex = loop.index0 %}
<div class="modal fade" id="exampleModal-{{ loop.index0 }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel-{{ loop.index0 }}" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content p-6">
            <div class="modal-header" id="modal-header">
                <button type="button" @click="resetSize" class="btn-close justify-content-end ml-auto pull-right" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
{#            <div class="col-md-1 d-flex">#}
{#            </div>#}
            <div class="row">
            <div class="col-md-6">
            <div class="row g-1">
                <div class="col-md-4 col-sm-hide mt-4 d-none d-sm-block">
                    <div class="col-6">
                            {% for imgpro in img_attr %}
                                <div class="bg-light h-auto mb-3 cursor-pointer" style="border: 1px #000000 !important;">
                                        <img @click="switchImg({{ imgpro.position }}, 'carouselItem-{{ carouselIndex }}')" class="img-fluid mx-auto d-table" src="{{ basepath ~ imgpro.image }}" alt="">
                                </div>
                            {% endfor %}
                    </div>
                </div>
                <div class="col-md-8 col-sm-12 mt-4">
                    <div class="col-10">
                        <div id="carousel-{{ loop.index0 }}" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
                            <div class="carousel-inner">
                            {% for imgprobig in img_attr %}
                                {% if  loop.first%}
                                    <div name="carouselItem-{{ carouselIndex }}" class="carousel-item active">
                                        <input type="hidden" value="{{ imgprobig.position }}">
                                        <div class="bg-white h-auto">
                                            <img class="img-fluid d-table mx-auto demo-trigger" style="border: 1px #000000 !important"
                                                 src="{{ basepath ~ imgprobig.image }}"
                                                 data-zoom="{{ basepath ~ imgprobig.image }}" alt="">
                                        </div>
                                    </div>
                                {% else %}
                                    <div name="carouselItem-{{ carouselIndex }}" class="carousel-item">
                                        <input type="hidden" value="{{ imgprobig.position }}">
                                        <div class="bg-white h-auto">
                                            <img class="img-fluid d-table mx-auto demo-trigger" style="border: 1px #000000 !important"
                                                 src="{{ basepath ~ imgprobig.image }}"
                                                 data-zoom="{{ basepath ~ imgprobig.image }}" alt="">
                                        </div>
                                    </div>
                                {% endif %}

                            {% endfor %}
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-{{ loop.index0 }}" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" style="filter: grayscale(1) invert(1);" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-{{ loop.index0 }}" data-bs-slide="next">
                                <span class="carousel-control-next-icon" style="filter: grayscale(1) invert(1);" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <div class="col-md-6">
                <h3>{{ product.product_name }}</h3>
                {% set idIndex = loop.index0 %}
                {% include template ~ "/categories/components/product-options-modal.twig" %}
                </div>
            </div>
        </div>
    </div>
</div>

