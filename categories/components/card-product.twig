<div class="col-12 col-sm-6 col-md-4 product" v-for="(item, index) in products">
    <!-- Products-->
    <div class="product-grid">
        <div class="product-image">
{#            <pre>{{ dump(sec_attr[0].variant4_whouse_id) }}</pre>#}
            <a v-if="item.v_alias" :href="'{{ basepath }}'+ item.v_alias" class="image">
               <div v-if="img_attr_vue[index][0].image != null">
                    <img class="pic-1" :src="'{{ basepath }}'+ img_attr_vue[index][0].image">
                    <img class="pic-2" :src="'{{ basepath}}'+ img_attr_vue[index][1].image">
               </div>
                    <img v-else class="pic-1" src="{{ basepath }}/templates/arcigraphic/assets/images/logos/arcigraphic-fooder-small.png">
            </a>
            <a v-else :href="'{{ uripath }}/product/'+ item.v_id" class="image">
                <div v-if="img_attr_vue[index][0].image != null">
                    <img class="pic-1" :src="'{{ basepath }}'+ img_attr_vue[index][0].image">
                    <img class="pic-2" :src="'{{ basepath}}'+ img_attr_vue[index][1].image">
                </div>
                <img v-else class="pic-1" src="{{ basepath }}/templates/arcigraphic/assets/images/logos/arcigraphic-fooder-small.png">
            </a>
            {#
            <div class="badge fixed text-center text-uppercase">-23%</div>
                            <li>
                        <ul class="product-links">

                                <a data-tip="quick add" href="#">
                                    <button class=" btn btn-sm color color-red rounded-circle mx-2" value="red"></button>
                                </a>
                            </li>
                            <li>
                                <a data-tip="quick add" href="#">
                                    <button class="btn btn-sm color color-blue rounded-circle mx-2" value="blue"></button>
                                </a>
                            </li>
                        </ul>
             #}
        </div>
         <div class="product-content">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="title-index brands">{_ item.brand_name _} </h3>
                <h3 class="title-index">
                    <a v-if="item.v_alias" :href="'{{ basepath }}'+ item.v_alias"> {_item.product_name_} </a>
                    <a v-else :href="'{{ uripath }}/product/'+ product.v_id"> {_item.product_name_} </a>
                </h3>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                    <div v-if="sec_attr_vue[index][0].promo_price != null">
                    <div class="text-muted fw-bolder" style="margin-right: 1rem;"><s>{_ numberFormat(sec_attr_vue[index][0].price ) _}</s></div>
                    <div class="text-danger price">{_ numberFormat(sec_attr_vue[index][0].promo_price) _}</div>
                    </div>
                    <div v-else class="text-danger price"> {_ numberFormat(sec_attr_vue[index][0].price) _}</div>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                     <div v-if="sec_attr_vue[index][0].available != null" class="price">{{ lang_layout.item_available }}</div>
                     <div v-else class="fw-bold text-danger">{{ lang_layout.item_not_available }}</div>
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <ul class="rating p-0 mb-0">
                    <li class="fas fa-star"></li>
                    <li class="fas fa-star"></li>
                    <li class="far fa-star"></li>
                    <li class="far fa-star"></li>
                    <li class="far fa-star"></li>
                </ul>
                <a v-if="sec_attr_vue[index][0].available != null" class="cart-button" data-bs-toggle="modal" :data-bs-target="'#exampleModal-'+index" ><i class="fa-solid fa-cart-plus fa-lg"></i></a>
            </div>
         </div>
    </div>
    {% include template ~ "/categories/components/cart-product-modal.twig" %}
    <!-- / Products-->
</div>
