<div v-for="item in cartData.items" class="d-none d-md-flex justify-content-between align-items-start py-2">
    <div class="d-flex flex-grow-0 justify-content-start align-items-start">
        <div class="position-relative f-w-20 border p-2 me-4">
            <span class="checkout-item-qty bg-orange text-primary fw-bold">{_ parseInt(item.quantity) _}</span>
            <img :src="{% if basepath != "" %} '{{ basepath }}' + {% endif %} JSON.parse(item.variant_images)[0].image" :alt="JSON.parse(item.variant_images)[0].alt" class="rounded img-fluid">
        </div>
    </div>
    <div>
        <p class="mb-1 fs-6 fw-bolder">{_ item.name _}</p>
        <small class="d-flex align-baseline text-muted">
            <input id="displayColor" name="displayColor" class="input-color-circle" type="color" :value="JSON.parse(item.custom_value).color" disabled>
            &nbsp;/&nbsp;{_ JSON.parse(item.secondary_attributes)[0].attribute_value.value _}
        </small>
    </div>
    <div class="flex-shrink-0 fw-bolder ms-1">
        <span>{_ numberFormat(item.total_price) _}</span>
    </div>
</div>
