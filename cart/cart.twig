{% extends template ~ "/layout/layout.twig" %}

{% block content %}
    <section class="mt-0 container" style="padding-top: 8.5rem">
        <div id="cartCheckout">
            <h1 class="mb-3 display-5 fw-bold text-center">{{ lang.title_cart }}</h1>
            <div class="mt-3 pt-4 border-top">
                <h3 class="m-auto text-center p-4" v-if="showCart == 'empty'">{{lang.cart_empty}}</h3>
                <div v-else id="pageContainer">

                    {% include template ~ "/cart/details.twig" %}
                    {% include template ~ "/cart/checkout.twig" %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}