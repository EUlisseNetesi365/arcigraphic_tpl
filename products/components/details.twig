<!-- Product Tabs-->
<div class="mt-5 pt-5 border-top">
    <div class="container">
        <!-- Tab Nav-->
        <ul class="nav justify-content-center nav-tabs ul-tabs nav-fill" id="myTab" role="tablist">
            <li class="nav-item w-100 mb-2 mb-sm-0 w-sm-auto" role="presentation">
                <a class="nav-link w-100 fs-5 fw-bolder tabs-style px-0 active justify-content-center" id="composition-tab"
                   data-bs-toggle="tab" href="#composition"
                   role="tab" aria-controls="composition" aria-selected="true">{{ lang.details }}</a>
            </li>
        </ul>
        <!-- / Tab Nav-->

        <!-- Tab Content-->
        <div class="tab-content tabs-content-border" id="myTabContent">
            <!-- Tab Composition Content-->
            <div class="tab-pane fade show active mx-3 ms-md-5 py-5" id="composition" role="tabpanel"
                 aria-labelledby="details-tab">

                <div class="text-start">
                    {{ description }}
                </div>
            </div>
            <!-- Tab Composition Content-->
        </div>
        <!-- / Tab Content-->
    </div>
</div>